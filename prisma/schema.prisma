generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Int
  capacity    Int?      // ✅ Question mark = can be empty
  createdAt   DateTime  @default(now())
  bookings    Booking[]
  
  @@index([id])
}

model Booking {
  id         Int      @id @default(autoincrement())
  roomId     Int
  guestName  String
  guestEmail String?  // ✅ Question mark = can be empty
  createdAt  DateTime @default(now())
  room       Room     @relation(fields: [roomId], references: [id])
  
  @@index([roomId])
  @@index([createdAt])
}